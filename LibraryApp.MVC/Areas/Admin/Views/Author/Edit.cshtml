@model Author

<div class="text-center">
    <div class="display-6 my-3">
        <i class="fa-solid fa-pencil"></i>
        Edit
    </div>
</div>

<div class="fw-bold text-danger" asp-validation-summary="ModelOnly"></div>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-floating mb-2 my-2">
        <input asp-for="FirstName" type="text" class="form-control" placeholder="@Model.FirstName" />
        <label asp-for="FirstName">First Name</label>
    </div>

    <div class="form-floating mb-2 my-2">
        <input asp-for="LastName" type="text" class="form-control"   placeholder="@Model.LastName" />
        <label asp-for="LastName">Last Name</label>
    </div>

    <div class="form-floating mb-2 my-2">
        <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="@Model.DateOfBirth" />
        <label asp-for="DateOfBirth">Date of Birth</label>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
        <button class="btn btn-warning" asp-action="Edit">
            <i class="fa-solid fa-pencil"></i>
            Edit
        </button>
    </div>
</form>
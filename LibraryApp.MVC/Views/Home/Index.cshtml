@if (User.Claims.FirstOrDefault(x => x.Type == "id")?.Value == null)
{
    <div class="display-3 my-20">
        Welcome
    </div>

    <div>
        <a class="btn btn-secondary" asp-controller="Auth" asp-action="SignIn">
            Sign In
        </a>
        <a class="btn btn-warning" asp-controller="Auth" asp-action="SignUp">
            Sign Up
        </a>
    </div>
} else
{
    <div class="display-3 my-20">
        Welcome @User.Claims.FirstOrDefault(x => x.Type == "fullName")?.Value
    </div>
}
